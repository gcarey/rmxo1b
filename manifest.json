{
  "manifest_version": 2,


  "name": "Tipster",
  "short_name": "Tipster",
  "description": "Share stuff with friends.",
  "homepage_url": "http://www.tipster.to",
  "author": "Garrett Carey",
  "version": "0.0.1.3",

  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },


  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["sentry.js"],
    "persistent": true
  },

  "permissions": [ 
    "tabs",
    "identity",
    "storage",
    "notifications",
    "http://www.tipster.to/*"
  ],

  "web_accessible_resources": [
    "img/icon48.png"
  ],


  "incognito": "split"
}